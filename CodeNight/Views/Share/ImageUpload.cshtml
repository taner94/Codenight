@model CodeNight.Entities.Share

@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-md-8 col-md-offset-2">

        @using (Html.BeginForm("ImageUpload", "Share", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <hr />
                @Html.ValidationSummary(false)
                <div class="form-group">
                    <div class="col-md-2">
                        <label>Düşüncelerinizi Yazınız</label>
                    </div>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ShareText, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2">
                        <label>Resim Seçiniz</label>
                    </div>
                    <div class="col-md-10">
                        <input type="file" name="image" id="image" />

                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-offset-2 col-md-4">
                        <button type="submit" class="btn btn-success">
                            <span class="fa fa-plus"></span>Paylaş
                        </button>
                        <div class="col-md-offset-2 col-md-4">
                            @Html.ActionLink("Profile Geri Dön", "ShowFootballerProfile", "Home", null, new { @class = "btn btn-default" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>